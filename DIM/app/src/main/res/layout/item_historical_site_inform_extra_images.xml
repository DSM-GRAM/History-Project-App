<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_historical_site_inform"
        android:layout_width="160dp"
        android:layout_height="175dp">

        <ImageView
            android:id="@+id/image_historical_site_inform_extra_images"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/text_historical_site_inform_extra_images_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/card_historical_site_inform" />

    <TextView
        android:id="@+id/text_historical_site_inform_extra_images_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="location"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/text_historical_site_inform_extra_images_name" />
</android.support.constraint.ConstraintLayout>