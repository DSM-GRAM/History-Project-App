<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/quiz_drag_lay"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorGray"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_dragtest"
        android:background="@color/colorbrown"
        android:minHeight="?attr/actionBarSize">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/quiz_drag_arrow_back_imgv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow_back_white_24dp" />
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/quiz_drag_arrow_back_imgv"
                android:id="@+id/quiz_drag_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test"
                android:textSize="22dp"
                android:textColor="@color/colorwhite"
                android:layout_marginStart="50dp"
                android:textStyle="bold"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1">

        <android.support.constraint.ConstraintLayout
            android:background="@drawable/round_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp">
            <TextView
                android:id="@+id/quiz_drag_question_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:text="문제"
                android:textColor="@color/colorblack"
                android:textSize="12dp"/>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_marginVertical="5dp"
            android:paddingVertical="20dp"
            android:orientation="horizontal"
            android:id="@+id/word_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/first_word_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:id="@+id/first_word"
                    android:background="@drawable/round_gray_button"
                    android:gravity="center"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/colorblack"
                    android:onClick="WordDrag"/>
                <TextView
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/second_word"
                    android:background="@drawable/round_gray_button"
                    android:gravity="center"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/colorblack"
                    android:onClick="WordDrag"/>
                <TextView
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/third_word"
                    android:background="@drawable/round_gray_button"
                    android:gravity="center"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/colorblack"
                    android:onClick="WordDrag"/>
            </LinearLayout>
            <LinearLayout
                app:layout_constraintTop_toBottomOf="@id/first_word_layout"
                android:orientation="horizontal"
                android:id="@+id/second_word_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/fourth_word"
                    android:background="@drawable/round_gray_button"
                    android:gravity="center"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="@color/colorblack"
                    android:onClick="WordDrag"/>
            </LinearLayout>


        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_dragtest_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorkhaki">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

                <TextView
                    android:padding="5dp"
                    android:id="@+id/first_space"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/round_white_button"
                    android:gravity="center"
                    android:text="(1)"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
</LinearLayout>