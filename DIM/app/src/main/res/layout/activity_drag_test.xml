<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorGray"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_dragtest"
        android:background="@color/colorbrown"
        android:minHeight="?attr/actionBarSize">
        <ImageView
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_back_white_24dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test"
            android:textSize="22dp"
            android:textColor="@color/colorwhite"
            android:layout_marginStart="50dp"
            android:textStyle="bold"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1">

        <android.support.constraint.ConstraintLayout
            android:background="@drawable/round_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="(1)을 짜는 것은 너무 (2)요. 으으으아아아아아아"
                android:textColor="@color/colorblack"
                android:textSize="12dp"/>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_marginVertical="5dp"
            android:paddingVertical="20dp"
            android:orientation="horizontal"
            android:id="@+id/btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/first_word"
                android:background="@drawable/round_gray_button"
                android:gravity="center"
                android:layout_width="85dp"
                android:layout_height="35dp"
                android:text="Enabled"
                android:textColor="@color/colorblack"/>
            <TextView
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/first_word"
                android:id="@+id/second_word"
                android:background="@drawable/round_gray_button"
                android:gravity="center"
                android:layout_width="85dp"
                android:layout_height="35dp"
                android:text="Enabled"
                android:textColor="@color/colorblack"/>
            <TextView
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/second_word"
                android:id="@+id/third_word"
                android:background="@drawable/round_gray_button"
                android:gravity="center"
                android:layout_width="85dp"
                android:layout_height="35dp"
                android:text="Enabled"
                android:textColor="@color/colorblack"/>
            <TextView
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/first_word"
                android:id="@+id/fourth_word"
                android:background="@drawable/round_gray_button"
                android:gravity="center"
                android:layout_width="85dp"
                android:layout_height="35dp"
                android:text="Enabled"
                android:textColor="@color/colorblack"/>
            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@id/fourth_word"
                app:layout_constraintTop_toBottomOf="@id/second_word"
                android:id="@+id/fifth_word"
                android:background="@drawable/round_gray_button"
                android:gravity="center"
                android:layout_width="85dp"
                android:layout_height="35dp"
                android:text="Enabled"
                android:textColor="@color/colorblack"/>
            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@id/fifth_word"
                app:layout_constraintTop_toBottomOf="@id/third_word"
                android:id="@+id/sixth_word"
                android:background="@drawable/round_gray_button"
                android:gravity="center"
                android:layout_width="85dp"
                android:layout_height="35dp"
                android:text="Enabled"
                android:textColor="@color/colorblack"/>

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_dragtest_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorkhaki">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/first_space"
                android:layout_width="85dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/round_white_button"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/second_space"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="(1)" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/second_space"
                android:layout_width="85dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/round_white_button"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/first_space"
                app:layout_constraintEnd_toStartOf="@id/third_space" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="(2)"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/third_space"
                android:layout_width="85dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/round_white_button"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/second_space"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="(3)"/>
            </LinearLayout>>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.Toolbar>
</LinearLayout>